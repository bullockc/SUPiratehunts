
<!-- Adjusts to screen size -->
<head>
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<% provide(:title, 'Create New Task') %>
<h1>Create New Task</h1>


<div class="row">
 <div class="col-md-6 col-md-offset-3">
   <center>
   <ul class="nav nav-tabs">
     <li class="active"><a data-toggle="tab" href="#QA">QA Task</a></li>
     <li><a data-toggle="tab" href="#photo">Photo Task</a></li>
  </ul>
  </center>

  <div class="tab-content">
    <div id="QA" class="tab-pane fade in active">
		<p>
			<%= form_for(@task, url: hunt_tasks_path) do |f| %>
		    <div class="opaque-forms">
			  <%= f.hidden_field :hunt_id, :value => @huntID %>

			  <%= f.label :prompt, "Task Prompt (What will be displayed)"%>
			  <%= f.text_field :prompt %>

			  <%= f.label :clue, "Add a Clue (Optional)" %>
			  <%= f.text_field :clue %>
			  
			  <%= f.label :correct_answer, "Correct Answer" %>
			  <%= f.text_field :correct_answer %>

			  <%= f.label :points, "Point Value (0-100)" %>
			  <%= f.number_field(:points,in: 5..100, step: 5) %>

			  <%= f.hidden_field :task_type, :value => "0"%>
			  <!-- initialized to a static value, representative of a given hunt type. Can be changed later -->
		  </div>  
		  <%= f.submit "Create Task", class: "btn btn-primary" %>
		 
		    <% end %>
	    </p>
    </div>
 
    
	
	<div id="photo" class="tab-pane fade">
        <p>
			<%= form_for(@task, url: hunt_tasks_path) do |f| %>
					<div class="opaque-forms">
					  <%= f.hidden_field :hunt_id, :value => @huntID %>

					  <%= f.label :prompt, "Task Prompt (What will be displayed)"%>
					  <%= f.text_field :prompt %>

					  <%= f.label :clue, "Add a Clue (Optional)" %>
					  <%= f.text_field :clue %>

					  <%= f.label :points, "Point Value (0-100)" %>
					  <%= f.number_field(:points,in: 5..100, step: 5) %>

					  <%= f.hidden_field :task_type, :value => "1"%>
					  <!-- initialized to a static value, representative of a given hunt type. Can be changed later -->
				  </div>  
				<%= f.submit "Create Task", class: "btn btn-primary" %>
		  <% end %>
		</p>
    </div>
</div>
</div>
</div>

