<li id="hunt-<%= hunt.id %>">
  <span class="title"><%=link_to hunt.title, hunt %></span>
  <span class="author"><%= hunt.user.display_name %></span>
  <span class="description"><%= hunt.description %></span>
  <span class="timestamp">
    Created <%= time_ago_in_words(hunt.created_at) %> ago.
  </span>
</li>