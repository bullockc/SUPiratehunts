<%if pirate_task.task.task_type == 1 %>
	
	<b>
	<%= pirate_task.task.prompt %>
	</b>
	<br>
	
	<%= image_tag pirate_task.submission.url(:medium) %>

	<%= form_for pirate_task, url: approve_pirate_task_path(pirate_task.id), method: :post do |f| %>
		<%= f.hidden_field :id, :value => pirate_task.hunt_id %>
		<%= f.hidden_field :completed, :value => 'true' %>
		<%= f.submit "Approve this photo" %>
	<% end %>

    <%= form_for pirate_task, url: reject_pirate_task_path(pirate_task.id), method: :post do |f| %>
      <%= f.hidden_field :completed, :value => 'false' %>
      <%= f.submit 'Reject this photo' %>
    <% end%>
    
<% end %>
