<head>
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<h1>Hunts</h1>

<h3>Let's create a hunt</h3>

<br><br>
<%= form_for(@hunt) do |f| %>
		  <div class="opaque-forms">
		  <%= f.label :title, "Title" %>
		  <%= f.text_field :title %>
		  <br>
		  
		  <table style="width: 100%;">
		  <tr>
			  <td style="width: 33%;" align="center";><%= f.label :active, "Active"%></td>
			 
			  <td style="width: 33%;" align="center";><%= f.label :published, "Published"%></td>
			  
			  <td style="width: 33%;" align="center";><%= f.label :public, "Public"%></td>
		  </tr>
		  <tr>
		      <td style="width: 33%;"><%= f.check_box :active %></td>
		  
		      <td style="width: 33%;"><%= f.check_box :published %></td>
			  
			   <td style="width: 33%;"><%= f.check_box :public %></td>
		  </tr>
		  </table>
		  
		  <%= f.label :start_date, "Start Date (put in yyyy-mm-dd if typing in)" %>
		  <%= f.date_field :start_date %>
		  <br>
		  <%= f.label :end_date, "End Date (put in yyyy-mm-dd if typing in)" %>
		  <%= f.date_field :end_date %>
		  <br>
		  <%= f.label :start_location, "Start Location"%>
		  <%= f.text_field :start_location%>
		  <br>
		  <%= f.label :description, "Description"%>
		  <%= f.text_field :description%>
		  <br>
		  <%= f.hidden_field :user_id, :value => current_user.id%>
		  <%= f.hidden_field :created_at%>
		  <%= f.hidden_field :updated_at%>
		  <br>
		  </div>
		  <%= f.submit "Create Hunt", class: "btn btn-primary btn-block" %>
		 
		<% end %>




