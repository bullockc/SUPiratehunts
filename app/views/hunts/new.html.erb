<h1>Hunts</h1>

<h3>This is the generate a hunt page!</h3>

<br><br>
<%= form_for(@hunt) do |f| %>
		  <%= f.label :title, "Title" %>
		  <%= f.text_field :title %>
		  <br>
		  <%= f.label :active, "Active"%>	
		  <%= f.check_box :active %>
		  <br>
		  <%= f.label :published, "Published"%>	
		  <%= f.check_box :published %>
		  <br>
		  <%= f.label :public, "Public"%>	
		  <%= f.check_box :public %>
		  <br>
		  <%= f.label :start_date, "Start Date" %>
		  <%= f.date_field :start_date %>
		  <br>
		  <%= f.label :end_date, "End Date" %>
		  <%= f.date_field :end_date %>
		  <br>
		  <%= f.label :start_location, "Start Location"%>
		  <%= f.text_field :start_location%>
		  <br>
		  <%= f.label :description, "Description"%>
		  <%= f.text_field :description%>
		  <br>
		  <%= f.hidden_field :created_at%>
		  <%= f.hidden_field :updated_at%>
		  <br>
		  <%= f.submit "Create Hunt", class: "btn btn-primary" %>
		<% end %>




