<head>
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<div class="text-center">
<!-- Create a Hunt Icon --->
<img class="img-circle" src="http://www.bootbundle.com/bundle/roundicons/free-60-icons-26.png">
</div>
<h3>Let's create a hunt</h3>
<br>
<%= form_for(@hunt) do |f| %>
		  <div class="opaque-forms">
		  <%= f.label :title, "Title" %>
		  <%= f.text_field :title %>
		  <br>

		  
	
		      <%= f.hidden_field :active, :value => false %>
		  
		      <%= f.hidden_field :published, :value => false %>
			  
			  <%= f.hidden_field :public, :value => true %>
		  
		  
		  <%= f.label :start_date, "Start Date (put in yyyy-mm-dd if typing in)" %>
		  <%= f.date_field :start_date %>
		  <br>
		  <%= f.label :start_time, "Begins at"%>
		  <%= f.time_field :start_time %>
		  <br>
		  <%= f.label :end_date, "End Date (put in yyyy-mm-dd if typing in)" %>
		  <%= f.date_field :end_date %>
		  <br>
		  <%= f.label :end_time, "Ends at"%>
		  <%= f.time_field :end_time %>
		  <br>
		  <%= f.label :start_location, "Start Location"%>
		  <%= f.text_field :start_location%>
		  <br>
		  <%= f.label :description, "Description"%>
		  <%= f.text_field :description%>
		  <br>
		  <%= f.hidden_field :user_id, :value => current_user.id%>
		  <%= f.hidden_field :created_at%>
		  <%= f.hidden_field :updated_at%>
		  <br>
		  </div>
		  <%= f.submit "Create Hunt", class: "btn btn-capstone btn-block" %>
		 
		<% end %>




